// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  password  String
  role      String   @default("USER") // USER, ADMIN, TECHNICIAN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  serviceRequests ServiceRequest[]

  @@map("users")
}

model ServiceRequest {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // PLUMBING, ELECTRICAL, HVAC, APPLIANCE, CLEANING, MAINTENANCE, CARPENTRY, PAINTING, OTHER
  status      String   @default("PENDING") // PENDING, CONFIRMED, IN_PROGRESS, COMPLETED, CANCELLED
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  address     String
  phone       String
  email       String
  scheduledAt DateTime?
  completedAt DateTime?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@map("service_requests")
}